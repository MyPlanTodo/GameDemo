<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main_main"
    >

    <ImageView
        android:id="@+id/activity_starting_iv_backround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/beijing"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-300dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/activity_starting_ll_c"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="16"
        android:layout_below="@+id/activity_starting_ll_c"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="本题倒计时："
                android:gravity="center"
                />
            <TextView
                android:id="@+id/count_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#C00024"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="秒"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#C00024"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="当前得分："
            android:gravity="center"
                android:layout_marginLeft="10dip"

            />
            <TextView
                android:id="@+id/tv_current_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textColor="#C00024"
                android:textSize="28sp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="您的选择："
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_nullselect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未选择"
                android:gravity="center"
                android:textColor="#C00024"
                android:textSize="20sp"
                />

        </LinearLayout>



        <ProgressBar
            android:id="@+id/starting_pb"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_color_2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"

            android:gravity="center"
            >
            <TextView
                android:id="@+id/starting_problem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="爱中，仰望我们主耶稣基督的怜悯，直到永生.出自："
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#B54200"
                />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/starting_pb_2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_color"
            />

        <GridView
            android:id="@+id/starting_gv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:numColumns="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="确定"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/shape_sure_btn_blue"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                />
<View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_weight="1"
    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.01"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/starting_skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="略过SKIP"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#99006C00"
            />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#C6C6C6"
                android:layout_weight="0.01"
                android:layout_marginTop="5dip"
                />
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="帮助HELP"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#99A50000"

            />
            </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/starting_tv_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="摩西五经"
                android:textSize="20sp"
                android:textColor="#823F3F"
                android:layout_marginTop="5dip"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
    </LinearLayout>






</RelativeLayout>
