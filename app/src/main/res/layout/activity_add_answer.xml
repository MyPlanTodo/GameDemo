<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="@dimen/activity_horizontal_margin"
        android:layout_margin="6dp"
        >

        <EditText
            android:id="@+id/et_send_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写题目"
            android:text=""
            android:textColor="@color/textcolor_m"
            android:background="@color/cardview_shadow_end_color"
            />

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="@dimen/activity_horizontal_margin"
        android:layout_margin="6dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_send_answer_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写正确答案"
            android:textColor="@color/textcolor_m"
            />
    <EditText
        android:id="@+id/et_send_answer_n_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写错误答案"
            android:textColor="@color/textcolor_m"
            />
<EditText
    android:id="@+id/et_send_answer_n_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写错误答案"
            android:textColor="@color/textcolor_m"
            />
<EditText
    android:id="@+id/et_send_answer_n_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写错误答案"
            android:textColor="@color/textcolor_m"
            />

</LinearLayout>

        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="@dimen/activity_horizontal_margin"
        android:layout_margin="6dp"
        >

        <EditText
            android:id="@+id/et_send_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写参考经文或资料"
            android:text=""
            android:textColor="@color/textcolor_m"
            android:background="@color/cardview_shadow_end_color"
            />
    </android.support.v7.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        />

    <TextView
        android:id="@+id/tv_send_norm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意《圣经问答APP》上传规范"
        android:padding="4dp"
        android:background="@drawable/selector_white_tran"
        />

</LinearLayout>
    </LinearLayout>

    <include layout="@layout/loading"></include>
</RelativeLayout>